{
  "crudId": "iauctions-crud-bids",
  "entityName": "bid",
  "apiRoute": "/iauctions/v1/bids",
  "permission": "iauctions.bids",
  "extraFormFields": "iauctions.crud-fields.bids",
  "create": false,
  "read": {
    "columns": [
      {
        "name": "id",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.form.id"
        },
        "field": "id",
        "sortable": false,
        "style": "width: 50px"
      },
      {
        "name": "auction",
        "label": {
          "isTranslatable": "singular",
          "value": "iauctions.cms.auction"
        },
        "field": "auction",
        "align": "left",
        "sortable": false,
        "format":{
          "type":"str",
          "child":["title"]
        }
      },
      {
        "name": "provider",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.label.provider"
        },
        "field": "provider",
        "align": "left",
        "sortable": false,
        "format":{
          "type":"concat",
          "child":["firstName", "lastName"]
        }
      },
      {
        "name": "statusName",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.form.status"
        },
        "field": "statusName",
        "align": "left",
        "sortable": false,
        "classes":{
          "value": "text-weight-bold",
          "child": "status"
        }
      },
      {
        "name": "amount",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.label.amount"
        },
        "field": "amount",
        "align": "left",
        "format":{
          "type":"number"
        },
        "sortable": false
      },
      {
        "name": "winner",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.label.winner"
        },
        "field": "winner",
        "align": "left",
        "format":{
          "isVal":{
            "method": "parseInt" ,
            "value": "val",
            "yes":["isite.cms.label.yes"],
            "no":["isite.cms.label.no"]
          }
        },
        "sortable": false
      },
      {
        "name": "create_at",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.form.createdAt"
        },
        "field": "createdAt",
        "align": "left",
        "sortable": false,
        "format": {
          "type": "date"
        }
      },
      {
        "name": "updated_at",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.form.updatedAt"
        },
        "field": "updatedAt",
        "align": "left",
        "sortable": false,
        "format": {
          "type": "date"
        }
      },
      {
        "name": "actions",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.form.actions"
        },
        "align": "left"
      }
    ],
    "filters": [
      {
        "filterName": "status",
        "value": null,
        "type": "select",
        "props": {
          "label": {
            "isTranslatable": {
              "type": "singular",
              "value": "isite.cms.form.status"
            },
            "clearable": true
          },
          "loadOptions": {
            "apiRoute": "/iauctions/v1/status-bid",
            "select": {"label": "name", "id": "value"}
          }
        }
      }
    ],
    "requestParams": {
      "params": {
        "validatioAppMode": {
          "mode":"iadmin"
        },
        "providerId": {
          "store": "quserAuth.userId"
        }
      },
      "include": "provider,auction.category,fields"
    },
    "actions": [
      {
        "name":"show",
        "icon":"fas fa-eye",
        "label": {
          "isTranslatable": "singular",
          "value": "isite.cms.label.show"
        },
        "action": {
          "type":"ref",
          "value":"showBidData", 
          "method": "showBidData"
        }
      }
    ]
  },
  "update": false,
  "delete": false
}